<resources>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
        <item name="materialButtonStyle">@style/primaryButtonStyle</item>
    </style>


    <style name="clickable_view">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="clickable_view_border" parent="clickable_view">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="splashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="primaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/x5dp</item>
        <item name="android:paddingBottom">@dimen/x5dp</item>
        <item name="cornerRadius">@dimen/x10dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="tv_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">@dimen/x18sp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12.5sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
